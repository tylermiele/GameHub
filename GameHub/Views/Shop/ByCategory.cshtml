@model IEnumerable<GameHub.Models.Product>

@{
    ViewData["Title"] = "ByCategory";
}

<h1>Shopping by: @ViewData["Category"] Games</h1>
@if (Model.Count() == 0)
{
    <h2>Sorry we don't have available products in this category at the moment.</h2>
}

<section class="row card-group">

    @foreach (var item in Model)
    {
        <div class="col-lg-4 mb-3">
            <div class="card mb-3 text-center h-100">
                <div class="card-body">
                    <h5>@item.Name</h5>
                    <p>@String.Format("{0:c}", item.Price)</p>
                    <p>@item.ReleaseYear</p>
                    @if (item.Photo != null)
                    {
                        <img src="~/img/products/@item.Photo" class="thumb" alt="@item.Name" title="@item.Name" />
                    }
                    else
                    {
                        <img src="~/img/products/placeholder.gif" alt="Placeholder Image" title="No image found" />
                    }

                </div>
            </div>
        </div>
    }

</section>
