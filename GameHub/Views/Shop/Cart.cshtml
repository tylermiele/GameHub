@model IEnumerable<GameHub.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if(item.Product.Photo != null){
                    <img src="~/img/products/@item.Product.Photo" class="thumb" alt="@item.Product.Name" title="@item.Product.Name" >
                }else{
                    <img src="~/img/products/placeholder.gif" alt="Placeholder Image" title="No image found"/>     
                }
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @String.Format("{0:c}",item.Price)
            </td>
            
            <td>
                <a asp-action="RemoveFromCart" asp-route-id="@item.CartItemId">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" class="btn btn-primary">Continue Shopping</a>
    <a asp-action="Checkout" class="btn btn-secondary">Checkout</a>
</div>
